<Window
    x:Class="ComicManager.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ComicManager"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1000"
    Height="506"
    mc:Ignorable="d">
    <Grid>
        <!--  Define Grid Rows and Columns  -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  For Search Bar  -->
            <RowDefinition />
            <!--  For Content  -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="363" />
            <!--  For Image  -->
            <ColumnDefinition Width="300*" />
            <ColumnDefinition Width="137*" />
            <!--  For ListView  -->
        </Grid.ColumnDefinitions>

        <!--  Search Bar  -->
        <TextBox
            Grid.Row="0"
            Grid.Column="0"
            Margin="10,10,10,10"
            Text="Search..." />

        <!--  Comic Cover Image Placeholder  -->
        <Border
            Grid.Row="1"
            Grid.Column="0"
            Margin="10,10,10,10"
            Background="LightGray">
            <Image Source="{Binding CoverImage}" Margin="0,0,0,-1" />
        </Border>

        <!--  File ListView  -->
        <ListView
            Grid.Row="1"
            Grid.Column="1"
            Margin="10,10,11,10"
            Background="LightGray"
            ItemsSource="{Binding FilesList}"
            SelectionChanged="ListView_SelectionChanged"
            SelectionMode="Extended">
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="開く" />
                    <MenuItem Header="削除" />
                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding fileName}">
                        <GridViewColumnHeader Click="FileName_Click" Content="FileName" />
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding dateTime}">
                        <GridViewColumnHeader Click="CreateTime_Click" Content="CreateTime" />
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding filePath}" Header="FilePath" />
                    <GridViewColumn DisplayMemberBinding="{Binding maxBytes}" Header="Bytes" />
                </GridView>
            </ListView.View>
        </ListView>
        <Label
            Grid.Column="1"
            Margin="10,10,11,10"
            Content="{Binding Path}" />
        <Button
            Grid.Column="2"
            Margin="10,20,10,10"
            Click="FolderOpen_Click"
            Content="開く" />
        <GroupBox Header="リネーム" Grid.Column="2" Margin="10,12,10,10" Grid.Row="1">
            <StackPanel>
                <Button Padding="5" Margin="10 10 10 10" Content="指定した文字列を左に挿入" Click="LeftStr_Click"/>
                <Button Padding="5" Margin="10 10 10 10" Content="指定した文字列を右に挿入"/>
                <Button Padding="5" Margin="10 10 10 10" Content="指定した文字列を削除"/>
                <TextBox x:Name="strEntry" FontSize="18" Text="文字列を追加" Margin="10 10 10 10" Height="30"></TextBox>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
