<Window x:Class="ComicManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComicManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Define Grid Rows and Columns -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- For Search Bar -->
            <RowDefinition Height="*"/>
            <!-- For Content -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="283.938294010889"/>
            <!-- For Image -->
            <ColumnDefinition/>
            <!-- For ListView -->
        </Grid.ColumnDefinitions>

        <!-- Search Bar -->
        <TextBox Grid.Row="0" Grid.Column="0" 
                 Margin="10,10,10,10" Height="30" Text="Search..."/>

        <!-- Comic Cover Image Placeholder -->
        <Border Grid.Row="1" Grid.Column="0" Margin="10,10,10,10" Background="LightGray">
            <Image  Source="{Binding CoverImage}"/>
        </Border>

        <!-- File ListView -->
        <ListView Grid.Row="1" Grid.Column="1" Margin="10,10,10,10" Background="LightGray" ItemsSource="{Binding FilesList}" >
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding fileName}">
                        <GridViewColumnHeader Content="FileName" Click="FileName_Click">
                        </GridViewColumnHeader>
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding dateTime}" >
                        <GridViewColumnHeader Content="CreateTime" Click="CreateTime_Click"/>
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding filePath}" Header="FilePath"/>
                    <GridViewColumn DisplayMemberBinding="{Binding maxBytes}" Header="Bytes" />
                </GridView>
            </ListView.View>
        </ListView>
        <Label Content="{Binding Path}" Margin="260,10,10,10" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
