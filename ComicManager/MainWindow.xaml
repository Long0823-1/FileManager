<Window
    x:Class="ComicManager.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ComicManager"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1000"
    Height="800"
    Closed="Window_Closed"
    mc:Ignorable="d">
    <Grid>
        <!--  Define Grid Rows and Columns  -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  For Search Bar  -->
            <RowDefinition />
            <!--  For Content  -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="380*" />
            <!--  For Image  -->
            <ColumnDefinition Width="300*" />
            <ColumnDefinition Width="137*" />
            <!--  For ListView  -->
        </Grid.ColumnDefinitions>

        <!--  Search Bar  -->
        <TextBox
            Grid.Row="0"
            Grid.Column="0"
            Margin="10,10,10,10"
            Text="Search..." />

        <!--  Comic Cover Image Placeholder  -->
        <Border
            Grid.Row="1"
            Grid.Column="0"
            Margin="10,10,10,10"
            Background="LightGray">
            <Image
                x:Name="Cover"
                Margin="0,0,0,-1"
                RenderOptions.BitmapScalingMode="Fant"
                Source="{Binding CoverImage}" />
        </Border>

        <!--  File ListView  -->
        <ListView
            x:Name="FilesListView"
            Grid.Row="1"
            Grid.Column="1"
            Margin="10,10,11,10"
            Background="LightGray"
            ItemsSource="{Binding FilesList}"
            MouseDoubleClick="FilesListView_MouseDoubleClick"
            PreviewMouseDoubleClick="FilesListView_PreviewMouseDoubleClick"
            SelectionChanged="ListView_SelectionChanged"
            SelectionMode="Extended">
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Click="Open_Click" Header="開く" />
                    <MenuItem Click="Delete_Click" Header="削除" />
                    <MenuItem Click="FileNameCopy_Click" Header="ファイル名をコピー" />
                    <MenuItem Click="FileDirectoryOpen_Click" Header="ファイルの場所を開く"/>
                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding fileName}">
                        <GridViewColumnHeader Click="FileName_Click" Content="FileName" />
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding dateTime}">
                        <GridViewColumnHeader Click="CreateTime_Click" Content="CreateTime" />
                    </GridViewColumn>
                    <!--<GridViewColumn DisplayMemberBinding="{Binding filePath}" Header="FilePath" />-->
                    <GridViewColumn DisplayMemberBinding="{Binding maxBytes}" Header="Bytes" />
                </GridView>
            </ListView.View>
        </ListView>
        <Label
            Grid.Column="1"
            Margin="10,10,11,10"
            Content="{Binding Path}" />
        <Button
            Grid.Column="2"
            Margin="3,9,3,9"
            Click="FolderOpen_Click"
            Content="開く" />
        <GroupBox
            Grid.Row="1"
            Grid.Column="2"
            Margin="10,12,10,10"
            Header="リネーム">
            <StackPanel>
                <RadioButton
                    Margin="10,10,10,10"
                    Padding="5"
                    x:Name="LeftStr"
                    Content="指定した文字列を&#xA;左に挿入" />
                <RadioButton
                    Margin="10,10,10,10"
                    Padding="5"
                    x:Name="RightStr"
                    Content="指定した文字列を&#xA;右に挿入" />
                <RadioButton
                    Margin="10,10,10,10"
                    Padding="5"
                    x:Name="DeleteStr"
                    Content="指定した文字列を&#xA;削除" />
                <RadioButton
                    Margin="10,10,10,10"
                    Padding="5"
                    x:Name="ExchangeStr"
                    Content="指定した文字列と&#xA;置き換える" />
                <TextBox
                    x:Name="strEntry"
                    Height="20"
                    Margin="10,10,10,10"
                    FontSize="10"
                    Text="置き換え前の文字列を追加" />
                <Label HorizontalAlignment="Center" Content="↓" />
                <TextBox
                    x:Name="ExchangeStrEntry"
                    Height="20"
                    Margin="10,10,10,10"
                    FontSize="10"
                    Text="置き換え後の文字列を追加" />
                <Button
                    Padding="5"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Click="Conv_Click"
                    Content="変換" Width="117" />
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
